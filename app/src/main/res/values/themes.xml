<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArtExplore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#4CAF50</item> <!-- Green -->
        <item name="colorPrimaryVariant">#388E3C</item> <!-- Darker Green -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icons on primary -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">#CDDC39</item> <!-- Lime -->
        <item name="colorSecondaryVariant">#AFB42B</item> <!-- Dark Lime -->
        <item name="colorOnSecondary">#000000</item> <!-- Black text/icons on secondary -->

        <!-- Background and surface colors -->
        <item name="backgroundColor">#FFFFFF</item> <!-- White background -->
        <item name="colorOnBackground">#000000</item> <!-- Black text/icons on background -->
        <item name="colorSurface">#F5F5F5</item> <!-- Light gray for surfaces -->
        <item name="colorOnSurface">#000000</item> <!-- Black text/icons on surfaces -->

        <!-- Error colors -->
        <item name="colorError">#B00020</item> <!-- Red -->
        <item name="colorOnError">#FFFFFF</item> <!-- White text/icons on error -->

        <!-- Text colors -->
        <item name="android:textColorPrimary">#000000</item> <!-- Black primary text -->
        <item name="android:textColorSecondary">#616161</item> <!-- Dark gray secondary text -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>